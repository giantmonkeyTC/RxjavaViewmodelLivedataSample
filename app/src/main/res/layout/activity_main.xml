<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Main_Counter_TV"
        android:textSize="30sp"
        />
    <EditText
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/Main_Counter_TV"
        android:id="@+id/Main_Counter_Input_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:text="确定"
        android:background="#FFFFFF"
        android:id="@+id/Main_Enter_Button"
        app:layout_constraintTop_toBottomOf="@id/Main_Counter_Input_ET"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/Main_Reset_Button"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="重置"
        android:background="#FFFFFF"
        android:id="@+id/Main_Reset_Button"
        app:layout_constraintStart_toEndOf="@id/Main_Enter_Button"
        app:layout_constraintTop_toBottomOf="@id/Main_Counter_Input_ET"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>